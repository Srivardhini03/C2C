<%- include('partials/header') %>
<% if (locals.user.bankDetails.accNo){ %>
<div class="give">


<%  loans.forEach(function(item){ %>
  <% if (item.status =="pending"){ %>
      <% if (item.loaneeID!= locals.user._id){ %>
  <div class= "flex1">
  <form action="/users/profile/loan/<%=item._id%>/<%=item.loaneeID%>/giveLoanSubmit" class="bankform" id="loanForm">
   <p>loanee -> <%=item.loanee%></p>
   <p>amount -> <%=item.amount%> rupees</p>
   <p>tenure -> <%=item.tenure%> months</p>
   <p>interest -> <%=item.interest%> percentage</p>
    <button type="submit" class="btn btn-1" name="button">Lend</button>
  </form>
</div>
<% } %>
<% } %>
<%  }); %>
</div>
<% }
else{ %>
  <h1>Fill your details(bank) first to apply for Loan</h1>
<a class="navtext nav-link" href="/users/profile/<%=user.id%>/myDetails">My Details</a>
<% } %>

<%- include('partials/footer') %>
